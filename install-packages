### A WRAPPER TO INSTALL PACKAGES
### FOR MANAGED CONTAINERS WHERE USERS CAN INSTALL PACKAGES
if [ -z $APT_PERFORM_UPDATE ]; then
    echo "[*] Updating package index..."
    apt update

    if [ -z $APT_PERFORM_UPGRADE ]; then
        echo "[*] Upgrading packages..."
        apt upgrade -y
    fi
fi

apt install "$@"